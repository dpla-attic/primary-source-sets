/* 
 * This overrides urls with Rails 3-style paths.
 * Overrides are necessary because in Rails 4, url paths are articulated without 
 * the prepended directory name '/assets/'.
 */

body {
  background: url('<%= image_path("background.jpg") %>') repeat-x left top #fff;
}

input[type='submit'] {
  background: url('<%= image_path("mag-glass.png") %>') no-repeat scroll center right transparent;
}

.ViewObject {
  font-size: inherit;
  font-weight: normal;
}
