<h1>Images</h1>

<p><%= link_to "Create new image", new_image_path %></p>

<table>
<% @images.each do |image| %>
  <tr>
    <td><%= image.file_name %></td>
    <td><%= link_to "View", image_path(image) %></td>
    <td><%= link_to "Delete", image_path(image),
                    method: :delete,
                    data: { confirm: "Are you sure you want to delete #{image.file_name}?" } %></td>
  </tr>
<% end %>
</table>
